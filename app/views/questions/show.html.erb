<h1> Question: <%= @question.title %> </h1>
<h3> Description: <%= @question.description %> </h3>

<h3>Answers:</h3>

<% if @question.answers.any? %>
<% @question.answers.each do |answer| %>
<p><%=answer.answer_name%>
    <%= form_for "answer_remove", :url => {:action => "remove"} do |f| %>
    <%= f.hidden_field :answer_id, :value => answer.id%>
    <%= f.submit "Take this answer of the question"%>
  <% end %>
</p>
<% end %>
<% else %>
<p>No answers on this question</p>
<% end %>


<p><%= link_to "Edit", edit_question_path(@question) %></p>
<p><%= link_to "Delete", question_path(@question),
  :data => {:confirm => "You sure?",
  :method => "delete"} %></p>

<p><%= link_to "Add an answer", '/questions/<%= @question.id %>/answer/new' </p>
<p><%= link_to "Return to questions", questions_path %></p>
<p><%= link_to "View all questions", questions_path %></p>
<p><%= link_to "Edit Question", edit_question_path %></p>
